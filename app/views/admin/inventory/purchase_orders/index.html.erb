<%= link_to "new order", new_admin_inventory_purchase_order_path, class: 'btn btn-sm btn-default pull-right' %>
<h2><i class="fa fa-tags"></i>&nbsp; Purchase Orders</h2>

<%= will_paginate @purchase_orders %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Order #</th>
		<th>Supplier</th>
		<th>Issue Date</th>
		<th>Due Date</th>
		<th>Amount</th>
		<th>Status</th>
		<td></th>
	</tr>
	<% @purchase_orders.each do |po| 
		amt = 0.0
		po.items.each { |item| amt += item.quantity * item.unit_price }%>
	<tr>
		<td><%= link_to po.id, admin_inventory_purchase_order_path(po) %></td>
		<td><%= po.supplier %></td>
		<td><%= systime po.issue_date %></td>
		<td><%= systime po.due_date %></td>
		<td><%= number_to_currency(amt) %></td>
		<td><%= po_status(po) %></td>
		<td>
			<%= link_to "edit", edit_admin_inventory_purchase_order_path(po) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: po.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>


<%= content_for :title do %>
	Purchase Orders
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Inventory</a></li>
	<li class="active">Purchase Orders</li>
<% end %>
