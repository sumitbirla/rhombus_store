<%= link_to "new order", new_admin_inventory_purchase_order_path, class: 'btn btn-sm btn-default pull-right' %>
<h2><i class="fa fa-tags"></i>&nbsp; Purchase Orders</h2>

<%= render "admin/shared/search_results_header", object: @purchase_orders %>

<ul class="nav nav-tabs" style="margin-bottom: 10px;">
  <li class="<%= "active" if params[:status] == "open" %>"><a href="<%= admin_inventory_purchase_orders_path(status: "open")%>">Open</a></li>
  <li class="<%= "active" if params[:status] == "closed" %>"><a href="<%= admin_inventory_purchase_orders_path(status: "closed")%>">Closed</a></li>
</ul>

<%= will_paginate @purchase_orders %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Order #</th>
		<th>Supplier</th>
		<th class="text-center">Issue Date</th>
		<th class="text-center">Due Date</th>
    <th class="text-center">Received</th>
		<th class="text-center">Amount</th>
		<th class="text-center">Status</th>
		<th></th>
	</tr>
	<%= render @purchase_orders %>
</table>


<%= content_for :title do %>
	Purchase Orders
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Inventory</a></li>
	<li class="active">Purchase Orders</li>
<% end %>
