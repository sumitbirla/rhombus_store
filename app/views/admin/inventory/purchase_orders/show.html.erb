<div class="pull-right">
  <%= link_to "print", print_admin_inventory_purchase_order_path(@purchase_order), class: "btn btn-sm btn-default" %>
  <%= link_to edit_admin_inventory_purchase_order_path(@purchase_order), class: "btn btn-sm btn-default" do %>
    <i class="fa fa-edit"></i> edit
  <% end %>
</div>
<h2>
	<i class="fa fa-file-text-o"></i>&nbsp; Purchase Order #<%= @purchase_order.id %> &nbsp; 
	<%= po_status @purchase_order, 'large' %>
</h2>
<hr/>

<div class="row" style="margin-left: 0;">
  <div class="col-md-6">
	<table class="table table-bordered table-condensed summary">
		<tr>
			<td class="key">Supplier</td>
			<td><%= link_to @purchase_order.supplier.name, admin_system_affiliate_path(@purchase_order.supplier) %></td>
		</tr>
		<tr class="key">
			<td>Issue Date</td>
			<td><%= sysdate @purchase_order.issue_date %></td>
		</tr>
		<tr>
			<td class="key">Due Date</td>
			<td><%= sysdate @purchase_order.due_date %></td>
		</tr>
		<tr>
			<td class="key">Ship via</td>
			<td><%= @purchase_order.ship_method %></td>
		</tr>
		<tr>
			<td class="key">Payment Terms</td>
			<td><%= @purchase_order.payment_terms %></td>
		</tr>
	</table>
  </div>

  <div class="col-md-6">
	<table class="table table-bordered table-condensed summary">
		<tr>
			<td class="key">Total Amount:</td>
			<td><%= number_to_currency(@purchase_order.total_amount) %></td>
		</tr>
		<tr>
			<td class="key">Currently Owed:</td>
			<td><%= number_to_currency(@purchase_order.amount_owed) %></td>
		</tr>
		<tr>
			<td class="key">Ship To</td>
			<td><%= raw @purchase_order.ship_to.gsub("\n", "<br/>") %></td>
		</tr>
	</table>
  </div>
</div>

<%= link_to "Receiving Worksheet", receiving_admin_inventory_purchase_order_path(@purchase_order), class: 'btn btn-sm btn-default pull-right' %></a>
<h4>Items:</h4>
<table class="table table-striped table-condensed">
	<tr>
		<th>SKU</th>
		<th>Description</th>
		<th class="text-center">Supplier Code</th>
		<th class="text-center">Qty Ordered</th>
		<th class="text-center">Unit Price $</th>
		<th class="text-center">Received</th>
		<th class="text-center">Subtotal</th>
		<th class="text-center">Status</th>
	</tr>
	<% @purchase_order.items.each do |item| %>
	<tr>
		<td><%= item.sku %></td>
		<td><%= item.description %></td>
		<td class="text-center"><%= item.supplier_code %></td>
		<td class="text-center"><%= item.quantity %></td>
		<td class="text-center"><%= number_to_currency(item.unit_price) %></td>
		<td class="text-center"><%= item.quantity_received %></td>
		<td class="text-center"><%= number_to_currency(item.quantity * item.unit_price) %></td>
		<td class="text-center"><%= poi_status(item)%></td>
	</tr>
	<% end %>
</table>




<%= content_for :title do %>
	Purchase Order #<%= @purchase_order.id %>
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Inventory</a></li>
	<li><%= link_to "Purchase Orders", admin_inventory_purchase_orders_path(status: :open) %></li>
	<li class="active">#<%= @purchase_order.id %></li>
<% end %>


<% content_for :head do %>
	<script>
	$(document).ready(function() {

		$("input[name='sku']").focus();

		$('#sel-shipping-address').change(function() {
			$('#purchase_order_ship_to').val($(this).val());
		});
	
	});
	</script>
<% end %>
