<% 
  item = inventory_item
  p = Product.find_by(sku: item.sku)
%>
	<tr>
		<td><%= link_to p.sku, admin_store_product_path(p) %></td>
		<td><%= p.name_with_option %></td>
		<td><%= item.inventory_location %></td>
    <td><%= item.lot %></td>
		<td class="text-center"><%= item.formatted_expiration %></td>
    <td class="text-right"><%= number_with_delimiter item.quantity %></td>
	</tr>