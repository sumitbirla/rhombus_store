<h2><i class="fa fa-boxes"></i>&nbsp; In Stock</h2>
<hr>

<ul class="nav nav-tabs" style="margin-bottom: 10px;">
  <li class="<%= "active" if params[:group].blank? %>"><a href="<%= admin_inventory_inventory_items_path %>">Totals</a></li>
  <li class="<%= "active" if params[:group] == 'location' %>"><a href="<%= admin_inventory_inventory_items_path(group: :location) %>">By Location</a></li>
</ul>
<%= will_paginate @inventory_items %>
<table class="table table-striped table-condensed">
	<tr>
		<th><%= sortable 'sku', 'SKU' %></th>
		<th>Description</th>
    <% unless params[:group].blank? %>
		  <th><%= sortable 'inventory_location_id', 'Location' %></th>
      <th><%= sortable 'lot', 'Lot #' %></th>
		  <th class="text-center"><%= sortable 'expiration' %></th>
    <% end %>
    <th class="text-right"><%= sortable 'quantity' %></th>
	</tr>
	<%= render @inventory_items %>
</table>


<%= render 'admin/shared/table_summary', data: @inventory_items %>


<% content_for :title do %>
	Inventory Items
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Inventory</a></li>
	<li class="active">Items</li>
<% end %>