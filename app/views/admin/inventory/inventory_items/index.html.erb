<div class="pull-right">
  <%= link_to new_admin_inventory_inventory_item_path, class: 'btn btn-default btn-sm' do %>
    <i class="fa fa-plus"></i> Add items
  <% end %>
  <%= link_to new_admin_inventory_inventory_item_path, class: 'btn btn-default btn-sm' do %>
    <i class="fa fa-right"></i> Move items
  <% end %>
  <%= link_to new_admin_inventory_inventory_item_path, class: 'btn btn-default btn-sm' do %>
    <i class="fa fa-minus"></i> Remove items
  <% end %>
</div>
<h2><i class="fa fa-tags"></i>&nbsp; Inventory Items</h2>


<%= will_paginate @inventory_items %>
<table class="table table-striped table-condensed">
	<tr>
		<th>SKU</th>
		<th>Description</th>
		<th>Location</th>
		<th class="text-center">Quantity</th>
    <th class="text-center">Lot</th>
		<th>Expiration</th>
    <th>Transaction</th>
		<th>Entered by</th>
	</tr>
	<%= render @inventory_items %>
</table>


<%= render 'admin/shared/table_summary', data: @inventory_items %>


<% content_for :title do %>
	Inventory Items
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Inventory</a></li>
	<li class="active">Items</li>
<% end %>