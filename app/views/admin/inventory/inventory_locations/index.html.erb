<%= link_to new_admin_inventory_inventory_location_path, class: 'pull-right btn btn-default btn-sm' do %>
  <i class="fa fa-plus"></i> New location
<% end %>
<h2><i class="fa fa-chevron-circle-right"></i>&nbsp; Inventory Locations</h2>


<%= will_paginate @inventory_locations %>
<table class="table table-striped table-condensed">
	<tr>
		<th><%= sortable "name" %></th>
		<th>Depth / width / height</th>
		<th class="text-center"><%= sortable "large_box" %></th>
		<th class="text-center"><%= sortable "heavy_box" %></th>
    <th class="text-center"><%= sortable "holding_area" %></th>
		<th class="text-center"><%= sortable "usable" %></th>
		<th class="text-center">Items</th>
		<th></th>
	</tr>
	<%= render @inventory_locations %>
</table>


<%= render 'admin/shared/table_summary', data: @inventory_locations %>


<% content_for :title do %>
	Inventory Locations
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Inventory</a></li>
	<li class="active">Locations</li>
<% end %>