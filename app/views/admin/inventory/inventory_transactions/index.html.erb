<div class="pull-right">
  <%= link_to new_admin_inventory_inventory_transaction_path, class: 'btn btn-default btn-sm' do %>
    <i class="fa fa-plus"></i> New transaction
  <% end %>
  <%= link_to new_admin_inventory_inventory_transaction_path, class: 'btn btn-default btn-sm' do %>
    <i class="fa fa-right"></i> Move items
  <% end %>
</div>
<h2><i class="fa fa-tags"></i>&nbsp; Inventory Transactions</h2>
<hr>

  
<%= form_with(url: "/admin/inventory/inventory_transactions", method: "get", class: "pull-right") do %>

  <%= check_box_tag(:bulk, "1", params[:bulk] == "1") %> Bulk Import &nbsp; &middot; &nbsp;
  <%= check_box_tag(:archived, "1", params[:archived] == "1") %> Archived &nbsp; &middot; &nbsp;
  
  <% dropshippers = Cache.affiliate_list(:dropshippers) %>
  <select id="fulfiller" name="affiliate_id" style="font-size: 14px; vertical-align: middle;">
    <option value="">-- All Affiliates --</option>
    <% dropshippers.each do |aff| %>
      <option value="<%= aff.id %>" <%= 'selected' if params[:affiliate_id] == aff.id.to_s %>><%= aff.name %></option>
    <% end %>
  </select>
  <input type="submit" value="filter" style="margin-bottom: 10px;" />
  <br>
<% end %>

<%= will_paginate @transactions %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Timestamp</th>
    <th></th>
    <th>Owner</th>
    <th class="text-right">Quantity</th>
		<th class="text-center">Items</th>
		<th>Entity</th>
    <th>Entered by</th>
    <th>Action</th>
    <th></th>
	</tr>
	<%= render @transactions %>
</table>


<%= render 'admin/shared/table_summary', data: @transactions %>


<% content_for :title do %>
	Inventory Items
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Inventory</a></li>
	<li class="active">Items</li>
<% end %>