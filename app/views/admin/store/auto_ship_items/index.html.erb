<%= link_to "new autoship item", new_admin_store_auto_ship_item_path, class: 'btn btn-sm btn-default pull-right' %>

<h2>Autoship Items</h2>

<% unless params[:q] %>
  <select name="item_type" class="pull-right item-status">
    <option value="active">Active Items</option>
    <option value="all" <%= "selected" if params[:item_type] == "all" %>>All Items</option>
  </select>
<% end %>

<%= will_paginate @auto_ship_items %>
<table class="table table-striped table-condensed table-sortable">
	<tr>
		<th><%= sortable "core_users.name", "User" %></th>
		<th><%= sortable "item_id" %></th>
		<th><%= sortable "description" %></th>
    <th class="text-center"><%= sortable "quantity" %></th>
    <th class="text-center"><%= sortable "last_shipped" %></th>
    <th class="text-center"><%= sortable "next_ship_date" %></th>
    <th class="text-center"><%= sortable "status" %></th>
		<th class="actions">&nbsp;</th>
	</tr>
	<% @auto_ship_items.each do |as| %>
	<tr>
		<td><%= link_to as.user.name, admin_system_user_path(as.user) %></td>
		<td><%= link_to as.item_id, admin_store_product_path(as.product_id) %></td>
		<td><%= as.description %></td>
    <td class="text-center"><%= as.quantity %></td>
    <td class="text-center"><%= as.last_shipped %></td>
    <td class="text-center"><%= as.next_ship_date %></td>
    <td class="text-center"><%= auto_ship_status(as) %></td>
		<td class="actions">
			<%= link_to "edit", edit_admin_store_auto_ship_item_path(as) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: as.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>

<div class="table-summary">
	<%= number_with_delimiter(@auto_ship_items.total_entries) %> records
</div>


<% content_for :title do %>
	Autoship Items
<% end %>


<% content_for :head do %>
  <script>
    $(document).ready(function() {
      $(".item-status").change(function() {
        window.location = "/admin/store/auto_ship_items?item_type=" + $(this).val();
      });
    });
  </script>
<% end %>



<% content_for :breadcrumbs do %>
	<li><a href="#">eCommerce</a></li>
	<li class="active">Autoship Items</li>
<% end %>