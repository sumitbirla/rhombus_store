<%= link_to "new code", new_admin_store_upc_path, class: 'btn btn-sm btn-default pull-right' %>

<h2><i class="fa fa-barcode"></i> UPC</h2>


<%= render "admin/shared/search_results_header", object: @upcs %>

<%= will_paginate @upcs %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Code</th>
		<th>Assigned item</th>
    <th>Flags</th>
    <th>Img Label</th>
    <th>Notes</th>
		<th class="actions">&nbsp;</th>
	</tr>
	<% @upcs.each do |upc| %>
	<tr>
		<td><%= upc.code %></td>
		<td><%= upc.item %></td>
    <td><%= upc.flags %></td>
    <td><%= upc.image_label %></td>
    <td><%= upc.notes %></td>
		<td class="actions">
			<%= link_to "edit", edit_admin_store_upc_path(upc) %> &nbsp;
			<%= link_to "delete",
						  { action: "destroy", id: upc.id },
						  method: :delete,
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>


<div class="table-summary">
	<%= number_with_delimiter(@upcs.total_entries) %> records | <%= link_to 'CSV', admin_store_upc_index_path(format: :csv) %>
</div>


<%= content_for :title do %>
	UPC Codes
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">eCommerce</a></li>
	<li class="active">UPC Codes</li>
<% end %>
