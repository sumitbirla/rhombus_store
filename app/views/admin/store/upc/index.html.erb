<%= link_to "new code", new_admin_store_upc_path, class: 'btn btn-sm btn-default pull-right' %>

<h2><i class="fa fa-barcode"></i> UPC</h2>


<% unless params[:q].nil? %>
    <div class="alert alert-info">Found <%= @upcs.total_entries %> records matching '<%= params[:q] %>'</div>
<% end %>

<%= will_paginate @upcs %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Code</th>
		<th>Assigned item</th>
		<th>&nbsp;</th>
	</tr>
	<% @upcs.each do |upc| %>
	<tr>
		<td><%= upc.code %></td>
		<td><%= upc.item %>
		<td>
			<%= link_to "edit", edit_admin_store_upc_path(upc) %> &nbsp;
			<%= link_to "delete",
						  { action: "destroy", id: upc.id },
						  method: :delete,
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>




<% content_for :breadcrumbs do %>
	<li><a href="#">eCommerce</a></li>
	<li class="active">UPC Codes</li>
<% end %>
