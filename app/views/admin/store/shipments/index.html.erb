<h2>
  <%= link_to "Create Shipment", admin_store_shipments_choose_order_path, class: 'btn btn-sm btn-default pull-right' %> &nbsp;
  <%= link_to "View Orders", admin_store_orders_path, class: 'btn btn-sm btn-default pull-right' %>
  <i class="fa fa-truck"></i> &nbsp;Shipments</h2>


<%= will_paginate @shipments %>
<table class="table table-striped table-condensed">
  <tr>
    <th>ID</th>
    <th>Ship to</th>
    <th>Destination</th>
    <th>Method</th>
    <th>Tracking</th>
    <th>Status</th>
    <th>&nbsp;</th>
  </tr>
  <% @shipments.each do |shipment|  %>
      <tr>
        <td><%= link_to shipment, admin_store_shipment_path(shipment) %></td>
        <td><%= shipment.recipient_name %></td>
        <td><%= shipment.recipient_city %>, <%= shipment.recipient_state %></td>
        <td><%= shipment.ship_method || '- not shipped -' %></td>
        <td>
          <% if shipment.tracking_number %>
            <%= shipment.tracking_number %>
          <% else %>
            n/a
          <% end %>
        </td>
        <td><span class="label <%= 'label-warning' if shipment.status == 'pending' %>  <%= 'label-success' if shipment.status == 'shipped' %>"><%= shipment.status %></span></td>
        <td class="ralign">
          <% if shipment.status == "pending" %>
            <%= link_to "ship", admin_store_shipment_path(shipment) %> &nbsp;
          <% end %>
          <%= link_to "edit", edit_admin_store_shipment_path(shipment) %> &nbsp;
          <%= link_to "delete",
                      { action: "destroy", id: shipment.id },
                      method: :delete,
                      data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
  <% end %>
</table>


<%= content_for :title do %>
    Shipments
<% end %>



<% content_for :breadcrumbs do %>
    <li><a href="#">eCommerce</a></li>
    <li class="active">Shipments</li>
<% end %>