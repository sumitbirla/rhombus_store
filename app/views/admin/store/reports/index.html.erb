<h2><i class="fa fa-chart-line"></i> Reports</h2>


<table class="table table-striped">
  <tr>
    <th>Report</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= link_to 'Product Leaderboard', admin_store_reports_product_sales_by_sku_path %></td>
    <td>Quanity of each product sold</td>
  </tr>
  <tr>
    <td><%= link_to 'User Leaderboard', admin_store_reports_user_leaderboard_path %></td>
    <td>Orders placed by each customer</td>
  </tr>
  <tr>
    <td><%= link_to 'Purchase Frequency', admin_store_reports_purchase_frequency_path %></td>
    <td>How many people ordered 'n' times</td>
  </tr>
  <tr>
    <td>Order Volume -
      <%= link_to "daily", admin_store_reports_daily_sales_path %>,
      <%= link_to "monthly", admin_store_reports_monthly_sales_path %>
