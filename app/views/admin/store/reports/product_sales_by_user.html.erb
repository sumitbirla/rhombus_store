<%= render 'admin/shared/report_filter'%>

<h2>Product Sales</h2>

<b>Total sold: <%= number_with_delimiter @data.sum { |x| x[5] } %></b><br><br>



<table class="table table-striped table-condensed">
	<tr>
    <th>Customer</th>
    <th>Location</th>
		<th>Item</th>
    <th class="text-right">Total Ordered</th>
    <th class="text-right">Average Order Value</th>
    <th class="text-right">Last Ordered</th>
	</tr>
  <% @data.each do |row|  %>
	<tr>
		<td><%= link_to row[1], admin_system_user_path(row[0], q: :orders) %></td>
		<td><%= row[2]%>, <%= row[3] %></td>
    <td><%= row[4] %></td>
    <td class="text-right"><%= number_with_delimiter row[5] %></td>
    <td class="text-right"><%= number_to_currency row[6] %></td>
    <td class="text-right"><%= row[7] %></td>
	</tr>
  <% end %>
</table>



<%= content_for :title do %>
	Product Sales
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">eCommerce</a></li>
  <li><%= link_to "Reports", admin_store_reports_path %></li>
	<li class="active">Product Sales</li>
<% end %>
