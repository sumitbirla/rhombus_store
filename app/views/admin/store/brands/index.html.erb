<%= link_to "new brand", new_admin_store_brand_path, class: 'btn btn-sm btn-default pull-right' %>

<h2>Brands</h2>

<%= will_paginate @brands %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Name</th>
		<th>Products</th>
		<th>Website</th>
		<th>&nbsp;</th>
	</tr>
	<% @brands.each do |brand| %>
	<tr>
		<td><%= link_to brand.name, edit_admin_store_brand_path(brand) %></td>
		<td><%= brand.products.count %>
		<td><%= brand.website %></td>
		<td>
			<%= link_to "edit", edit_admin_store_brand_path(brand) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: brand.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>



<%= content_for :title do %>
	Brands
<% end %>





<% content_for :breadcrumbs do %>
	<li><a href="#">eCommerce</a></li>
	<li class="active">Brands</li>
<% end %>
