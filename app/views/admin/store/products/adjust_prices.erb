<%= link_to "return to product list", admin_store_products_path, class: 'btn btn-sm btn-default pull-right' %>
<h2><i class="fa fa-tags"></i> &nbsp;Adjust Products</h2>
<hr>

	<form action="/admin/store/products/adjust_prices" method="post">
		<%= token_tag %>
	<table class="table table-striped table-condensed price-list">
		<tr>
			<th>Item</th>
			<th>Title</th>
      <th>Web $</th>
      <th>MSRP $</th>
      <th>MAP $</th>
		</tr>
		<% @products.each do |product|  %>
		<tr>
			<td><%= link_to product.sku, admin_store_product_path(product) %></td>
			<td><%= product.name_with_option %></td>
      <td><input name="web-<%= product.id %>" value="<%= product.price %>"></td>
      <td><input name="msrp-<%= product.id %>" value="<%= product.msrp %>"></td>
      <td><input name="map-<%= product.id %>" value="<%= product.retail_map %>"></td>
		</tr>
		<% end %>
	</table>

	<div class="form-actions">
		<button class="btn btn-primary">Update Prices</button>
	</div>
	</form>



<% content_for :title do %>
	Adjust Prices
<% end %>

<% content_for :head do %>
  <style>
  .price-list input { width: 80px; text-align: center; }
  </style>
<% end %>

<% content_for :breadcrumbs do %>
	<li><a href="#">eCommerce</a></li>
	<li><%= link_to "Products", admin_store_products_path %></li>
	<li class="active">Adjust Prices</li>
<% end %>
