<%= link_to "return to product list", admin_store_products_path, class: 'btn btn-sm btn-default pull-right' %>
<h2>Adjust Products</h2>


	<form action="/admin/store/products/adjust_prices" method="post">
		<%= token_tag %>
	<table class="table table-striped table-condensed">
		<tr>
			<th>Item</th>
			<th>Title</th>
			<th>Status</th>
			<th>Retail price</th>
			<th>Dealer price
		</tr>
		<% @products.each do |product|  %>
		<tr>
			<td><%= link_to product.sku, admin_store_product_path(product) %></td>
			<td>
				<%= product.title %>  
				<span class="light"><%= " (#{product.option_title})" unless product.option_title.blank? %>
			</td>
			<td>
				<% unless product.hidden %>
					<span class="label label-success">active</span>
				<% end %>
				<% if product.featured %>
					<span class="label label-info">featured</span>
				<% end %>
			</td>
			<td><input name="retail-<%= product.id %>" value="<%= product.price %>"></td>
			<td><input name="dealer-<%= product.id %>" value="<%= product.dealer_price %>"></td>
		</tr>
		<% end %>
	</table>

	<div class="form-actions">
		<button class="btn btn-primary">Update Prices</button>
	</div>
	</form>



<%= content_for :title do %>
	Adjust Prices
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">eCommerce</a></li>
	<li><%= link_to "Products", admin_store_products_path %></li>
	<li class="active">Adjust Prices</li>
<% end %>
