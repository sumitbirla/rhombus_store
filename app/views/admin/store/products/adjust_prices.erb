<h2><%= link_to "return to product list", admin_store_products_path, class: 'btn btn-sm btn-default pull-right' %>
	Adjust Products</h2>
	<hr/>

	<form action="/admin/products/adjust_prices" method="post">
		<%= token_tag %>
	<table class="table table-striped table-condensed">
		<tr>
			<th>Item</th>
			<th>Title</th>
			<th>Retail price</th>
			<th>Dealer price
		</tr>
		<% @products.each do |product|  %>
		<tr>
			<td><%= link_to product.sku, admin_store_product_path(product) %></td>
			<td><%= product.title %></td>
			<td><input name="retail-<%= product.id %>" value="<%= product.price %>"></td>
			<td><input name="dealer-<%= product.id %>" value="<%= product.dealer_price %>"></td>
		</tr>
		<% end %>
	</table>

	<div class="form-actions">
		<button class="btn">Update Prices</button>
	</div>
	</form>

<%= content_for :title do %>
	Adjust Prices
<% end %>



<% content_for :breadcrumbs do %>
	<li><a href="#">eCommerce</a></li>
	<li><%= link_to "Products", admin_store_products_path %></li>
	<li class="active">Adjust Prices</li>
<% end %>
